https://www.hackerrank.com/challenges/staircase/problem?isFullScreen=true

#include<iostream>
using namespace std;
int main()
{
    int n,m;
    cin>>n>>m;
    int a[n][m];
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<m;j++)
        {
            cin>>a[i][j];
        }
    }
     for(int i=0;i<n;i++)
    {
        for(int j=0;j<n;j++)
        {
          if(j<n-1-i)
          cout<<" ";
          else
           cout<<"#";
        }
        cout<<endl;
    }
    return 0;
}
